{
  "name": "textventure-play",
  "version": "1.0.0",
  "description": "textventure UI.",
  "author": "Mark <mark@remarkablemark.org>",
  "scripts": {
    "build": "NODE_ENV=production react-app-rewired build",
    "clean": "rm -rf build",
    "deploy": "scripts/deploy.sh",
    "eject": "react-scripts eject",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "release": "standard-version --no-verify",
    "start": "NODE_ENV=development react-app-rewired start",
    "test": "react-app-rewired test --coverage"
  },
  "homepage": "https://textventure.github.io/play",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@material-ui/core": "4.10.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint-plugin-prettier": "3.1.3",
    "gitploy": "0.1.0",
    "history": "4.10.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.6",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-app-rewired": "2.1.6",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.21",
    "react-scripts": "3.4.1",
    "standard-version": "8.0.0"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5.3",
    "yarn": ">=1"
  },
  "private": true,
  "license": "MIT",
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/registerServiceWorker.js",
      "<rootDir>/src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
